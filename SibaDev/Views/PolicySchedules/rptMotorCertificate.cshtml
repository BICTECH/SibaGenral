@model SibaDev.Models.INS_UWD_POLICY_HEAD
@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Css/Custom/rptMotor.css" rel="stylesheet" />
<script src="~/Scripts/Js/jquery-1.11.3.min.js"></script>
<script src="~/Scripts/Js/bootstrap.min.js"></script>
<link href="~/Content/Images/font-awesome-4.6.2/font-awesome-4.6.2/css/font-awesome.min.css" rel="stylesheet" />

<script>
    function printpage() {
        document.getElementById('btnPrint').style.visibility = "hidden";
        window.print();
    }
</script>


<div class="row">
    <button id="btnPrint" type="button" value="Print" onClick="printpage()">
        <i class="fa fa-print fa-3x" title="Delete" aria-hidden="true"></i>
    </button>
</div>



    <div class="page">
        <div class="subpage">

            <div class="row">
                <div class="col-md-12 center-block">
                    <p style="text-align:center;"><img src="~/Content/Images/multi.jpg" height="100" /></p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-md-10 center-block">
                    <p style="text-align:center;font-weight:normal;font-size:11px;border:0px red solid;width:100%;">MOTOR VEHICLES (THIRD PARTY INSURANCE) ACT 1958 (GHANA)</p>
                    <p style="text-align:center;font-weight:bold;">CERTIFICATE OF INSURANCE</p>
                </div>
                <div class="col-md-1"></div>
            </div>
            <hr />
            <table style="width:100%;" height="86">
                <tr>
                    <td width="138"><strong>Policy No:</strong></td>
                    <td width="370" class="info" style="text-align:left">@Model.POLH_DISPLAY_NO</td>
                </tr>
                <tr>
                    <td width="138"><strong>Certificate No:</strong></td>
                    <td width="370" class="info" style="text-align:left">CT1</td>
                </tr>
                <tr>
                    <td width="138"><strong>Computerised No:</strong></td>
                    <td width="370" class="info" style="text-align:left"></td>
                </tr>
            </table>

            <table height="600" style="width:100%; margin-top:10px; line-height: 20px" class="motor_detail_cert">
                <tr>
                    <td style="width: 45%;  margin-left: 50px">
                        <p>1. <strong>Index Mark and Registration of Vehicle:</strong></p>
                        <p>
                            @foreach (var be in Model.INS_UWD_VEHICLE_RISK)
                            {
                                @be.VEH_VEH_REG_NO
                            }
                        </p>
                    </td>
                    <td style="width: 5%"></td>
                    <td style="width: 45%">
                        <p>2. <strong>Name of Policy Holder:</strong></p>
                        <p>
                            @Model.MS_UDW_CUSTOMERS.CUS_OFFICIAL_NAME
                        </p>
                    </td>
                </tr>

                <tr>
                    <td style="width: 45%">
                        <p>3. <strong>Effective Date of the Commencement of Insurance for the purpose of the Act:</strong></p>
                        <p>
                           @Html.DisplayFor(x => x.POLH_POL_START_DATE)
                        </p>
                    </td>
                    <td style="width: 5%"></td>
                    <td style="width: 45%">
                        <p>4. <strong>Date of Expiry of Insurance</strong></p>
                        <p>
                          @Html.DisplayFor(x => x.POLH_POL_END_DATE)
                        </p>
                    </td>
                </tr>

                <tr>
                    <td style="width: 45%; text-align: justify;">
                        <p>5. <strong>Persons or Classes of Persons Entitled to Drive:</strong></p>
                        <p>
                            @foreach (var rsk in Model.INS_UWD_VEHICLE_RISK)
                            {
                                @rsk.MS_UDW_MOTOR_RISK.MRK_ENT_TO_DRIVE
                            }
                        </p>
                    </td>
                    <td style="width: 5%"></td>
                    <td style="width: 45%">
                        <p>6. <strong>Third Party Property Damage Limit:</strong></p>
                        <p>
                            @foreach (var rsk in Model.INS_UWD_RISK_COVERS)
                            {
                                @rsk.MS_UDW_COVERS.CVR_BASIC_COVER
                            }
                        </p>
                    </td>
                </tr>

                <tr>
                    <td style="width: 45%; text-align: justify;">
                        <p>7. <strong>Limitation as to Use:</strong></p>
                        <p>
                            @foreach (var rsk in Model.INS_UWD_VEHICLE_RISK)
                            {
                                @rsk.MS_UDW_MOTOR_RISK.MRK_LIMT_USE
                            }
                        </p>
                    </td>
                    <td style="width: 5%"></td>
                    <td style="width: 45%">
                        <p>8. <strong>The Policy does not Cover:</strong></p>
                        <p>
                            @foreach (var rsk in Model.INS_UWD_VEHICLE_RISK)
                            {
                                @rsk.MS_UDW_MOTOR_RISK.MRK_DOES_NOT_COV
                            }
                        </p>
                    </td>
                </tr>

                <tr style="background-color:gainsboro;">
                    <td style="width: 45%">
                        <p>9. <strong>O.D.E:</strong></p>
                        <p>
                            @foreach (var rsk in Model.INS_UWD_VEHICLE_RISK)
                            {
                                @rsk.MS_UDW_MOTOR_RISK.MRK_O_D_E
                            }
                        </p>
                    </td>
                    <td style="width: 5%"></td>
                    <td style="width: 45%">
                        <p></p>
                        <p>

                        </p>
                    </td>
                </tr>

            </table>
            &nbsp;
            &nbsp;
            <table style="width: 100%">
                <tr valign="top">
                    <td width="110"><strong>Issued By:</strong></td>
                    <td width="564">
                        <span class="info">
                            @Model.MS_SYS_COMPANY.CMP_NAME
                        </span>
                    </td>
                    <td width="57" align="center"><strong>Time: </strong></td> &nbsp;
                    <td width="265" align="left"><span class="info">@Html.DisplayFor(x => x.POLH_POL_START_DATE)</span></td>
                </tr>
            </table>
            &nbsp;
            &nbsp;
            <div class="row">
                <!-------------------Footer------------------->
                <div class="col-md-12" style="float:left">
                    I/WE HEREBY CERTIFY that the policy to which this certificate relate is issued in accordance with the provisions of the MOTOR VEHICLES (THIRD PARTY INSURANCE) ACT 1938 (GHANA)
                </div>
            </div>
            &nbsp;
            &nbsp;
            &nbsp;
            &nbsp;
            <div class="row">
                <div class="col-sm-5">
                    ...........................................................
                </div>
            </div>

            <div class="row">
                <div class="col-sm-5">
                    Director
                </div>
            </div>

        </div>
    </div>





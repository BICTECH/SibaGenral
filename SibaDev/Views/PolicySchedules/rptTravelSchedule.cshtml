@model SibaDev.Models.INS_UWD_POLICY_HEAD

@{
    Layout = null;
}

<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/Css/Custom/rptMotor.css" rel="stylesheet" />
<script src="~/Scripts/Js/jquery-1.11.3.min.js"></script>
<script src="~/Scripts/Js/bootstrap.min.js"></script>
<link href="~/Content/Images/font-awesome-4.6.2/font-awesome-4.6.2/css/font-awesome.min.css" rel="stylesheet" />

<script>
    function printpage() {
        document.getElementById('btnPrint').style.visibility = "hidden";
        window.print();
    }
</script>

<div class="row">
    <button id="btnPrint" type="button" value="Print" onClick="printpage()">
        <i class="fa fa-print fa-3x" title="Delete" aria-hidden="true"></i>
    </button>
</div>

<div class="row">
    <div class="col-sm-12 center-block">
        <p style="text-align:center;"><img src="~/Content/Images/plain-backgrounds.jpg" /></p>
    </div>
</div>

<div class="container" style="color:#000">
    <!-------------------Ttile------------------------>
    <!--------------Details------------------>

    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10 center-block">

            <p style="text-align:center;font-weight:bold;margin-top:20px;font-size:26px;">POLICY  SCHEDULE</p>

        </div>
        <div class="col-sm-1"></div>
    </div>

    <!--------------Details------------------>
    <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-10">
            <table width="100%" height="174" class="" style="border-top:2px #000 solid;border-bottom:2px #000 solid;">
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Insured Code:</strong></p></td>
                    <td width="251" valign="middle"> @Model.POLH_CUST_CODE</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Insured Name:</strong></p></td>
                    <td width="251" valign="middle"> @Model.MS_UDW_CUSTOMERS.CUS_OFFICIAL_NAME</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Insured Address:</strong></p></td>
                    <td width="251" valign="middle"> @Model.MS_UDW_CUSTOMERS.CUS_ADDRS1</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Business/Occupation:</strong></p></td>
                    <td width="251" valign="middle"> @Model.MS_UDW_CUSTOMERS.CUS_PROFESSION</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Broker/Agent:</strong></p></td>
                    <td width="251" valign="middle"> @Model.MS_SYS_INTERMEDIARY.INT_OFFICIAL_NAME</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
            </table>

            <!---Second Table---->
            <table width="100%" height="54" class="" style="border-bottom:2px #000 solid;">
                <tr valign="top">
                    <td width="186" height="32" valign="middle">
                        <p style="text-align:center;font-weight:bold;margin-top:10px;font-size:22px;">
                            <strong>@Model.MST_UWD_PRODUCT.PDT_NAME </strong>
                        </p>
                    </td>
                </tr>
            </table>

            <!---Third Table---->
            <table width="100%" height="128" class="" style="margin-top:2px;">
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p><strong>Policy Number:</strong></p></td>
                    <td width="251" align="center" valign="middle"> @Model.POLH_SYS_ID</td>
                    <td width="251" valign="middle">&nbsp;</td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle">
                        <p><strong>Period of Insurance:</strong></p>
                    </td>
                    <td width="40" align="center" valign="middle"><p><strong>From</strong></p></td>
                    <td width="70" align="left" valign="middle">@Model.POLH_POL_START_DATE</td>
                    <td width="50" align="left" valign="middle"><p><strong>To</strong></p></td>
                    <td width="120" align="left" valign="middle">@Model.POLH_POL_END_DATE.Value.Date</td>
                    <td width="100" align="right" valign="middle">Basic Premium:</td>
                    <td width="101" align="right" valign="middle">
                        @foreach (var rsk in Model.INS_UDW_TRAVEL_RISK)
                        {
                            foreach (var cover in rsk.INS_UWD_RISK_COVERS)
                            {
                                @cover.RCOV_NET_PREM_FC
                            }
                        }                      
                    </td>
                </tr>
                <tr valign="top">
                    <td width="186" height="32" valign="middle"><p>(1) Both Days Inclusive </p></td>
                    <td width="351" align="left" valign="middle">
                        <p>
                            (2)Any subsequent period for which the
                            insured shall pay and
                        </p>
                    </td>
                    <td width="20" align="right" valign="middle"></td>
                    <td width="20" align="right" valign="middle"></td>
                    <td width="20" align="right" valign="middle"></td>
                    <td width="100" align="right" valign="middle">Discount:</td>
                    <td width="150" align="right" valign="middle">
                        @foreach (var rsk in Model.INS_UDW_TRAVEL_RISK)
                        {
                            foreach (var cover in rsk.INS_UWD_RISK_COVERS)
                            {
                                @cover.RCOV_DISC_FC
                            }
                        }                     
                </td>
            </tr>
            <tr valign="top">
                <td width="186" height="32" valign="middle"><p></p></td>
                <td width="351" align="left" valign="middle">
                    <p>the Company shall agree to accept a renewal premium</p>
                </td>
                <td width="20" align="right" valign="middle"></td>
                <td width="20" align="right" valign="middle"></td>
                <td width="20" align="right" valign="middle"></td>
                <td width="100" align="right" valign="middle">Loading:</td>
                <td width="150" align="right" valign="middle">
                    @foreach (var rsk in Model.INS_UDW_TRAVEL_RISK)
                    {
                        foreach (var cover in rsk.INS_UWD_RISK_COVERS)
                        {
                            @cover.RCOV_LOAD_FC
                        }
                    }
                  
                </td>
            </tr>
            <tr valign="top">
                <td width="186" height="32" valign="middle"><p><strong>Cover:</strong></p></td>
                <td width="351" valign="middle"></td>
                <td width="20" align="right" valign="middle"></td>
                <td width="20" align="right" valign="middle"></td>
                <td width="20" align="right" valign="middle"></td>
                <td width="50" align="right" valign="middle"><strong>Premium(GHC):</strong></td>
                <td width="101" align="right" valign="middle">
                    @foreach (var rsk in Model.INS_UDW_TRAVEL_RISK)
                    {
                        foreach (var cover in rsk.INS_UWD_RISK_COVERS)
                        {
                            @cover.RCOV_GROSS_PREM_FC
                        }
                    }
                
            </td>
        </tr>
    </table>
    <!-------------THIRD----------------------------->

    <table width="100%" height="50" class="" style="border-top:2px #000 solid;border-bottom:2px #000 solid;">
        <tr valign="top">
            <td valign="middle">
                <p style="text-align:center;font-weight:bold;font-size:22px;">Risk Details  </p>
            </td>
        </tr>
    </table>

    <table width="100%" height="100" class="" style="margin-top:10px;">

        <tr valign="top" style="border:1px #000 solid;">

            <td width="11%" valign="top" style="border:1px #000 solid;">
                <p>
                    <strong>
                        Nationality
                    </strong>
                </p>
            </td>
            <td width="11%" valign="top" style="border:1px #000 solid;">
                <p>
                    <strong>
                        Passport
                    </strong>
                </p>
            </td>

            <td width="13%" valign="top" style="border:1px #000 solid;">
                <p>
                    <strong>

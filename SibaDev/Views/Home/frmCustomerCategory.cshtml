@{
    ViewBag.Title = "Country";
}
<script src="~/Scripts/Page_Scripts/customerCategory.setup.js"></script>
<script src="~/Scripts/Services/customercategory.service.js"></script>

<div class="main">

    <div id="page-content-wrapper" class="roundElement effects">
        <div class="container-fluid xyz">
            <div class="row form-view">

                <div class="col-sm-12 col-md-12">
                    <!--Form Header-->
                    <div class="container" style="width: 100%;">
                        <div class="panel panel-default container-fluid">
                            <div class="panel-heading row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-success" id="btn_Save">
                                            <i class="fa fa-save" title="Save" aria-hidden="true"></i> Save
                                        </button>
                                        <button type="button" class="btn btn-danger" id="btnDelete">
                                            <i class="fa fa-trash-o" title="Delete" aria-hidden="true"></i> Delete
                                        </button>
                                        <button type="reset" class="btn btn-primary" id="btn_Reset">
                                            <i class="fa fa-refresh" title="Reset" aria-hidden="true"></i> Reset
                                        </button>
                                    </div>

                                    <div class="col-md-8">
                                        <button type="button" id="btnQueryCusCat" class="btn btn-info" style="float: right; margin-right: 15px">
                                            <i class="fa fa-search" title="Search" aria-hidden="true"></i> Search
                                        </button>
                                        <input id="txtSearch" style="width: 50%; text-align: center; float: right; margin-right: 10px"
                                               class="form-control" type="text" name="txtSearch" placeholder="Search by Code">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row form-header">
                       
                    </div>
                    <!--Header-->
                    <div class="row form-header">

                        <div id="tabs">
                            <ul>
                                <li><a href="#tabs-1">Customer Category</a></li>
                            </ul>
                            <div id="tabs-1">
                                <form name="custcatForm" id="custcatForm">
                          
                                        <div class="row control-group form-padding">
                                            <span class="control-grp-lbl text-danger">Category </span>

                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-2">
                                                        <label class="required">Intermediary ?</label>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <span id="spry_currcountry">
                                                            <select id="CUS_CAT_INTERM_YN" name="CUS_CAT_INTERM_YN" class="form-control btn btn-default">
                                                                <option value="">-- Select Type -- </option>
                                                                <option value="N">NO</option>
                                                                <option value="Y">YES</option>                                                                
                                                            </select>
                                                            <span class="textfieldRequiredMsg">Field is required.</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-2">
                                                        <label class="required">Code</label>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <span id="spry_code">
                                                            <input id="CUS_CAT_CODE" class="form-control" min="3" maxlength="15" type="text" name="CUS_CAT_CODE" title="Code">
                                                            <span class="textfieldRequiredMsg"></span>
                                                            <span class="textfieldMinCharsMsg">Code must specify at least 15 characters.</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-2">
                                                        <label class="required">Name</label>
                                                    </div>
                                                    <div class="col-md-4">
                                                        <span id="spry_name">
                                                            <input id="CUS_CAT_NAME" class="form-control" 
                                                                   type="text" name="CUS_CAT_NAME" title="Name">
                                                            <span class="textfieldRequiredMsg">Name is required.</span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="form-group">
                                                    <div class="col-md-2">
                                                        <label>
                                                            Status
                                                        </label>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <input class="checkbox checkbox-inline pull-left" type="checkbox" id="CIT_STATUS" name="CIT_STATUS" checked required />
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                        <div class="row control-group form-padding">
                                            <span class="control-grp-lbl text-danger">Default Accounts</span>


                                            <div class="col-md-12 ">
                                                <div class="form-group">

                                                    <div class="col-md-2">
                                                        <label> Main Account</label>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="input-group">
                                                            <input class="form-control" type="text" maxlength="15" id="CUS_CAT_MAIN_ACCT" name="CUS_CAT_MAIN_ACCT" title="Main Account Code" required />
                                                            <span class="input-group-btn">
                                                                <button type="button" class="btn btn-default btn_lov" data-dialog='{"type":"btn_main_account" ,"field1":"CUS_CAT_MAIN_ACCT", "field2":"MAIN_ACCT_NAME"}'>
                                                                    <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                                </button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-7">
                                                        <input class="form-control" type="text" name="MAIN_ACCT_NAME" id="MAIN_ACCT_NAME" title="Main Account Name" />
                                                    </div>
                                                </div>
                                            </div>


                                            <div class="col-md-12">
                                                <div class="form-group">

                                                    <div class="col-md-2">
                                                        <label>Sub Account</label>
                                                    </div>
                                                    <div class="col-md-2">
                                                        <div class="input-group">
                                                            <input class="form-control" type="text" maxlength="15" id="CUS_CAT_SUB_ACCT" name="CUS_CAT_SUB_ACCT" title="Sub Ledger Code" required />
                                                            <span class="input-group-btn">
                                                                <button type="button" class="btn btn-default btn_lov" data-dialog='{"type":"btn_sub_account" ,"field1":"CUS_CAT_SUB_ACCT", "field2":"SUB_ACCT_NAME"}'>
                                                                    <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                                </button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <input class="form-control" type="text" name="SUB_ACCT_NAME" id="SUB_ACCT_NAME" title="Sub Ledger Name" />
                                                    </div>
                                                </div>
                                            </div>

                                        </div>

                                </form>
                                <!--Grid Buttons-->
                                <div class="row">
                                    <div class="btn-block">
                                        <button id="btn_add_record" class="btn btn-default" type="button"> <i class="fa fa-plus-circle text-success"></i> Add New</button>
                                        <button id="btn_update_record" class="btn btn-default" type="button"><i class="fa fa-edit text-yellow"></i> Update</button>
                                        <button id="btn_remove_record" class="btn btn-default" type="button"><i class="fa fa-trash-o text-danger"></i> Remove</button>

                                        <button type="button" class="btn btn-default pull-right dialog-btn" id="export-btn" title="Export Grid data to Excel">
                                            <img src="~/Content/Images/Excell_DownLoad.png" alt="Down Load" height="25" width="27" /> Export
                                        </button>
                                    </div>
                                </div>
                                <!--Setup Grid-->
                                <div class="row">
                                    <table id="grdCustCategory"></table>
                                    <table id="grdCustCategoryPager"></table>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
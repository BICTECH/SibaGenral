
<div class="col-md-42 main">

    <script src="~/Scripts/page_scripts/location.Setup.js"></script>
    <script src="~/Scripts/services/location.service.js"></script>
    <script src="~/Scripts/services/area.service.js"></script>

    <div id="page-content-wrapper" class="roundElement effects">
        <div class="container-fluid xyz">
            <div class="row form-view">
                <div class="col-sm-12 col-md-12">
                    <!--Form Header-->
                    <div class="container" style="width: 100%;">
                        <div class="panel panel-default container-fluid">
                            <div class="panel-heading row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-success" id="btn_Save">
                                            <i class="fa fa-save" title="Save" aria-hidden="true"></i> Save
                                        </button>
                                        <button type="button" class="btn btn-danger" id="btn_Delete">
                                            <i class="fa ion-trash-b" title="Delete" aria-hidden="true"></i> Delete
                                        </button>
                                        <button type="reset" class="btn btn-primary" id="btn_Reset">
                                            <i class="fa ion-loop" title="Reset" aria-hidden="true"></i> Reset
                                        </button>
                                    </div>

                                    <div class="col-md-8">
                                        <button type="button" id="btnQueryLocation" class="btn btn-info" style="float: right; margin-right: 15px">
                                            <i class="fa fa-search" title="Search" aria-hidden="true"></i> Search
                                        </button>
                                        <input id="txtSearch" style="width:50%; height: 30px; text-align:center; float:right; margin-right: 10px"
                                               class="text ui-widget-content ui-corner-all" type="text" name="txtSearch" placeholder="Search by Code">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                 

                        <div id="tabs">
                            <ul>
                                <li><a href="#tabs-1">Location Setups</a></li>
                            </ul>
                            <div id="tabs-1">

                                <form name="locationForm" id="locationForm" class="form-horizontal">
                                    <div>
                                        <div class="row control-group form-padding">
                                            <span class="control-grp-lbl text-danger">Fill the form below</span>
                                            <div class="row">

                                                <div class="col-md-8">

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label class="required">Code</label>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <span id="spry_code">
                                                                    <input type="text" min="2" max="15" id="LOC_CODE" class="form-control" name="LOC_CODE" title="Location Code" required />
                                                                    <span class="textfieldRequiredMsg">Code is required.</span>
                                                                    <span class="textfieldMinCharsMsg">Code must not be more than 15 characters.</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label class="required">Name</label>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <span id="spry_name">
                                                                    <input type="text" min="5" max="50" class="form-control" id="LOC_NAME" name="LOC_NAME" title="Location Name" required>
                                                                    <span class="textfieldRequiredMsg">Name is required.</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label>Description</label>
                                                            </div>
                                                            <div class="col-md-6">
                                                                <textarea class="form-control" min="3" id="LOC_DESC" maxlength="100" name="LOC_DESC" title="Location Description"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label class="required">Area</label>
                                                            </div>
                                                            <div class="col-md-2">
                                                                <span id="spry_lovcode">
                                                                    <div class="input-group">

                                                                        <input type="text" class="form-control" id="LOC_ARE_CODE" name="LOC_ARE_CODE" title="Area Code" required />

                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn_lov btn-default pull-left" data-dialog='{"type": "btn_area", "field1":"LOC_ARE_CODE", "field2":"ARE_NAME"}'>
                                                                                <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Code is required.</span>
                                                                </span>
                                                            </div>
                                                           
                                                            <div class="col-md-3">
                                                                <span id="spry_lovname">
                                                                    <input class="form-control" min="3" type="text" name="ARE_NAME" title="Area Name" />
                                                                    <span class="textfieldRequiredMsg">Name is required.</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="col-md-4">

                                                    <div class="row">
                                                        <div class="row">
                                                            <div class="form-group">
                                                                <div class="col-md-2">
                                                                    <label>Location Address</label>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <textarea class="form-control" min="3" maxlength="100" id="LOC_ADDR1" name="LOC_ADDR1" title="Location Address" required></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="row">
                                                            <div class="form-group">
                                                                <div class="col-md-2">
                                                                    <label>Posting Address</label>
                                                                </div>
                                                                <div class="col-md-6">
                                                                    <textarea class="form-control" min="3" maxlength="100" id="LOC_ADDR2" name="LOC_ADDR2" title="Postal Address" required></textarea>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label>
                                                                    Status
                                                                </label>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <input class="checkbox checkbox-inline pull-left" type="checkbox" id="LOC_STATUS" name="LOC_STATUS" checked />
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </form>
                                 
                                <!--Grid Buttons-->
                                <div class="row">
                                    <div class="btn-block">
                                        <button id="btn_add_record" class="btn btn-default" type="button"> <i class="fa fa-plus-circle text-success"></i> Add New</button>
                                        <button id="btn_update_record" class="btn btn-default" type="button"><i class="fa fa-edit text-yellow"></i> Update</button>
                                        <button id="btn_remove_record" class="btn btn-default" type="button"><i class="fa fa-trash-o text-danger"></i> Remove</button>

                                        <button type="button" class="btn btn-default pull-right dialog-btn" id="export-btn" title="Export Grid data to Excel">
                                            <img src="~/Content/Images/Excell_DownLoad.png" alt="Down Load" height="25" width="27" /> Export
                                        </button>
                                    </div>
                                </div>

                                    <div>
                                        <table id="grdLocation"></table>
                                        <table id="grdLocationPager"></table>
                                    </div>
                           </div>

                        </div>                 

                </div>
                         

            </div>

        </div>
    </div>


</div>

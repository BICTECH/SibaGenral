@{
    ViewBag.Title = "FAC placement";
}
<script src="~/Scripts/Reinsurance/facplacement.setup.js"></script>

<script src="~/Scripts/Page_Scripts/treatyArrangement.setup.js"></script>
<script src="~/Scripts/Services/office.service.js"></script>

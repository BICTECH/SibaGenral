
<div class="col-md-42 main">

    <script src="~/Scripts/Page_Scripts/region.setup.js"></script>
    <script src="~/Scripts/Services/region.service.js"></script>
    <script src="~/Scripts/Services/country.service.js"></script>

    <div id="page-content-wrapper" class="roundElement effects">
        <div class="container-fluid xyz">
            <div class="row">
                <div class="col-sm-12 col-md-12 col-lg-12">

                    <!--Form Header-->
                    <div class="container" style="width: 100%;">
                        <div class="panel panel-default container-fluid">
                            <div class="panel-heading row">
                                <div class="col-md-12 col-sm-12">
                                    <div class="col-md-4">
                                        <button type="button" class="btn btn-success" id="btn_Save">
                                            <i class="fa fa-save" title="Save" aria-hidden="true"></i> Save
                                        </button>
                                        <button type="button" class="btn btn-danger" id="btn_Delete">
                                            <i class="fa ion-trash-b" title="Delete" aria-hidden="true"></i> Delete
                                        </button>
                                        <button type="reset" class="btn btn-primary" id="btn_Reset">
                                            <i class="fa ion-loop" title="Reset" aria-hidden="true"></i> Reset
                                        </button>
                                    </div>

                                    <div class="col-md-8">
                                        <button type="button" id="btnQueryRegion" class="btn btn-info" style="float: right; margin-right: 15px">
                                            <i class="fa fa-search" title="Search" aria-hidden="true"></i> Search
                                        </button>
                                        <input id="txtSearch" style="width:50%; height: 30px; text-align:center; float:right; margin-right: 10px"
                                               class="text ui-widget-content ui-corner-all" type="text" name="txtSearch" placeholder="Search by Code">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    

                        <div id="tabs">
                            <ul>
                                <li><a href="#tabs-1">Region Setups</a></li>
                            </ul>
                            <div id="tabs-1">

                                <form name="regionForm" id="regionForm">
                                    <div>
                                        <div class="control-group form-padding">
                                            <span class="control-grp-lbl text-danger">Fill the form below</span>
                                            <div class="row">

                                                <div class="col-md-8">

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label class="required">Code</label>
                                                            </div>
                                                            <div class="col-md-3">
                                                                <span id="spry_code">
                                                                    <input type="text" min="2" max="15" class="form-control" id="REG_CODE" name="REG_CODE" title="Region Code" required>
                                                                    <span class="textfieldRequiredMsg">Code is required.</span>
                                                                    <span class="textfieldMaxCharsMsg">Code must specify at least 15 characters.</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label class="required">Name</label>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <span id="spry_name">
                                                                    <input type="text" min="5" max="50" class="form-control" id="REG_NAME" name="REG_NAME" title="Region Name" required>
                                                                    <span class="textfieldRequiredMsg">Name is required.</span>
                                                                </span>
                                                             </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label>Description</label>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <textarea class="form-control" min="3" maxlength="100" id="REG_DESC" name="REG_DESC" title="Region Description"></textarea>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">

                                                            <div class="col-md-2">
                                                                <label class="required">Country</label>
                                                            </div>

                                                            <div class="col-md-2">

                                                                <span id="spry_lovcode">
                                                                    <div class="input-group">
                                                                        <input class="form-control" min="3" maxlength="5" type="text" id="REG_CNT_CODE" name="REG_CNT_CODE" title="Code" required />
                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn_lov btn-default pull-left" data-dialog='{"type": "btn_country", "field1":"REG_CNT_CODE", "field2":"REG_CNT_CODE_NAME"}'>
                                                                                <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Code is required.</span>
                                                                </span>
                                                            </div>
                                                            
                                                            <div class="col-md-3">
                                                                <span id="spry_lovname">
                                                                    <input class="form-control" min="3" maxlength="5" type="text" id="REG_CNT_CODE_NAME" name="REG_CNT_CODE_NAME" title="Name" />
                                                                    <span class="textfieldRequiredMsg">Name is required.</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-2">
                                                                <label>
                                                                    Status
                                                                </label>
                                                            </div>
                                                            <div class="col-md-8">
                                                                <input class="checkbox checkbox-inline pull-left" type="checkbox" name="OFF_STATUS" checked />
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                </form>

                    <!--Grid Buttons-->
                    <div class="row">
                        <div class="btn-block">
                            <button id="btn_add_record" class="btn btn-default" type="button"> <i class="fa ion-plus-circled text-success"></i> Add New</button>
                            <button id="btn_update_record" class="btn btn-default" type="button"><i class="fa ion-edit text-yellow"></i> Update</button>
                            <button id="btn_remove_record" class="btn btn-default" type="button"><i class="fa ion-trash-b text-danger"></i> Remove</button>

                            <button type="button" class="btn btn-default pull-right dialog-btn" id="export-btn" title="Export Grid data to Excel">
                                <img src="~/Content/Images/Excell_DownLoad.png" alt="Down Load" height="25" width="27" /> Export
                            </button>
                        </div>
                    </div>

                    <div>
                        <table id="grdRegion"></table>
                        <table id="grdRegionPager"></table>
                    </div>
                </div>

                          </div>
                       
                  </div>

            </div>
        </div>
    </div>

</div>



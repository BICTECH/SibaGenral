                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label class="required">Code</label>
                                                        </div>
                                                        <div class="col-md-2">
                                                            <span id="spry_code">
                                                                <input id="LDI_CODE" class="form-control" min="3" maxlength="15" type="text" name="LDI_CODE" title="Code" required>
                                                                <span class="textfieldRequiredMsg">Code is required.</span>
                                                                <span class="textfieldMinCharsMsg">Code must specify at least 15 characters.</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label class="required">Name</label>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <span id="spry_name">
                                                                <input id="LDI_NAME" class="form-control" min="3" maxlength="50" type="text"
                                                                       name="LDI_NAME" title="Name" required>
                                                                <span class="textfieldRequiredMsg">Name is required.</span>
                                                                <span class="textfieldMinCharsMsg">Name must specify at least 15 characters.</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="col-md-3">
                                                            <label class="required">Description</label>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <span id="spry_desc">
                                                                <textarea id="LDI_DESC" rows="2" cols="10" maxlength="100"
                                                                          class="form-control" type="text" name="LDI_DESC" title="Description"></textarea>
                                                                <span class="textfieldRequiredMsg">Description is required.</span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>     
                                                
                                                <div class="row">
                                                    <div class="form-group">
                                                        <div class="col-md-2">
                                                            <label>
                                                                Status
                                                            </label>
                                                        </div>
                                                        <div class="col-md-3">
                                                            <input class="checkbox checkbox-inline pull-left" type="checkbox" id="LDI_STATUS" name="LDI_STATUS" checked />
                                                        </div>
                                                    </div>
                                                </div>    

                                            </div>

                                            <div class="col-md-6">

                                                <div class="row control-group form-padding">

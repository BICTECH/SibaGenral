                                                                        <input class="form-control" min="1" max-length="10" type="number" id="LDI_MIN_AMT"
                                                                               name="LDI_MIN_AMT" title="Money" required />
                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn-default" id="btnSelCover" style="width: 40px">
                                                                                <i class="fa fa-money" title="Select"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Min amount is required.</span>
                                                                    <span class="textfieldInvalidFormatMsg">Min amount must be integers</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                <label class="required">Maximum</label>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <span id="spry_maxamount">
                                                                    <div class="input-group">
                                                                        <input class="form-control" min="1" max-length="10" type="number" id="LDI_MAX_AMT"
                                                                               name="LDI_MAX_AMT" title="Money" required />
                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn-default" id="btnSelCover" style="width: 40px">
                                                                                <i class="fa fa-money" title="Select"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Max amount is required.</span>
                                                                    <span class="textfieldInvalidFormatMsg">Max amount must be integers</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                </div>

                                                <div class="row control-group form-padding">
                                                    <span class="control-grp-lbl text-danger">Percentage</span>
                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                <label class="required">Default</label>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <span id="spry_perc">
                                                                    <div class="input-group">
                                                                        <input class="form-control" min="1" max-length="3" type="number" id="LDI_DEFAULT_PERC"
                                                                               name="LDI_DEFAULT_PERC" title="Code" required />
                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn-default" id="btnSelCover" style="width: 40px">
                                                                                <i class="fa fa-percent" title="Select"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Default Percentage is required.</span>
                                                                    <span class="textfieldInvalidFormatMsg">Default Percentage  must be integer</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="form-group">
                                                            <div class="col-md-3">
                                                                <label class="required">Minimum</label>
                                                            </div>
                                                            <div class="col-md-4">
                                                                <span id="spry_minperc">
                                                                    <div class="input-group">
                                                                        <input id="LDI_MIN_PERC" class="form-control" min="1" maxlength="3" type="number"
                                                                               name="LDI_MIN_PERC" title="" required />
                                                                        <span class="input-group-btn">
                                                                            <button type="button" class="btn btn-default" id="btnSelCover" style="width: 40px">
                                                                                <i class="fa fa-percent" title="Select"></i>
                                                                            </button>
                                                                        </span>
                                                                    </div>
                                                                    <span class="textfieldRequiredMsg">Min Percentage is required.</span>
                                                                    <span class="textfieldInvalidFormatMsg">Min Percentage must be integers</span>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>


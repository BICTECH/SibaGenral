
@{
    Layout = "~/Views/Shared/_AccountModule.cshtml";
}


<script src="~/Scripts/Accounts/page_scripts/SubAccounts/SubAcount.setup.js"></script>
<script src="~/Scripts/Accounts/AcctServices/SubAccount.service.js"></script>

<script src="~/Scripts/services/currency.service.js"></script>
<script src="~/Scripts/Accounts/AcctServices/MainAccount.service.js"></script>
<div class="main">

    <div id="page-content-wrapper" class="roundElement effects">
        <div class="container-fluid xyz">
            <div class="row form-view">
                <div class="col-sm-12 col-md-12">
                    <div class="container" style="width: 100%;">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <button type="button" class="btn btn-success" id="btn_Save">
                                    <i class="fa fa-save" title="Save" aria-hidden="true"></i> Save
                                </button>
                                <button type="button" class="btn btn-danger" id="btnDelete">
                                    <i class="fa ion-trash-b" title="Delete" aria-hidden="true"></i> Delete
                                </button>
                                <button type="reset" class="btn btn-primary" id="btnReset">
                                    <i class="fa ion-loop" title="Reset" aria-hidden="true"></i> Reset
                                </button>
                                <button type="button" id="btnQuerySubAccount" class="btn btn-info" style="float: right; margin-right: 15px">
                                    <i class="fa fa-search" title="Search" aria-hidden="true"></i> Search
                                </button>
                                <input id="txtSearch" style="width: 20%; height: 30px; text-align: center; float: right; margin-right: 10px"
                                       class="text ui-widget-content ui-corner-all" type="text" name="txtSearch" placeholder="search by Name">
                            </div>
                        </div>
                    </div>
                    <!--Header-->
                    <div class="row form-header">
                        <div class="row">
                            <form name="subAcctForm" id="subAcctForm">
                                <!--HIDDEN FIELDS-->
                                <input type="hidden" id="SUB_ACCT_STATUS" name="SUB_ACCT_STATUS" value="U"/>
                                <div class="col-sm-12 col-md-12 col-lg-12">
                                    <div class="row control-group form-padding">
                                        <span class="control-grp-lbl text-danger">Sub Account Setup</span>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-2">
                                                    <label>Code </label>
                                                </div>
                                                <div class="col-md-1">
                                                    <input class="form-control" maxlength="15" type="text" id="SUB_ACCT_CODE" name="SUB_ACCT_CODE" title="SubAcct Code" required />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-2">
                                                    <label>Name</label>
                                                </div>
                                                <div class="col-md-8">
                                                    <input class="form-control" min="3" maxlength="100" type="text" id="SUB_ACCT_NAME" name="SUB_ACCT_NAME" title="SubAccount Name" required />
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-2">
                                                    <label>Description </label>
                                                </div>

                                                <div class="col-md-8">
                                                    <textarea class="form-control" maxlength="100" id="SUB_ACCT_DESC" name="SUB_ACCT_DESC" title="Description" required></textarea>
                                                </div>

                                            </div>
                                        </div>

                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-2">
                                                    <label>
                                                        Active
                                                    </label>
                                                </div>
                                                <div class="col-md-3">
                                                    <input class="checkbox checkbox-inline pull-left" type="checkbox" id="SUB_ACCT_ACTIVE" name="SUB_ACCT_ACTIVE" value="Y" checked />
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                </div>
                            </form>
                        </div>
                        

                        <div id="tabs">
                            <ul>
                                <li><a href="#tabs-1">Main Account</a></li>
                                <li><a href="#tabs-2">Currency</a></li>
                            </ul>

                            <div id="tabs-1">
                                <form id="acctSubMainForm">
                                    <div class="row">
                                        <div class="form-group">

                                            <div class="col-md-2">
                                                <label>Main Account</label>
                                            </div>

                                            <div class="col-md-3">
                                                <div class="input-group">
                                                    <input class="form-control" type="text" id="SUB_MAIN_ACCT_CODE" name="SUB_MAIN_ACCT_CODE" title="Main Account" required />
                                                    <span class="input-group-btn">
                                                        <button type="button" class="btn btn-default pull-left btn_lov" data-dialog='{"type": "btnSubAcctMainLov", "field1":"SUB_MAIN_ACCT_CODE", "field2":"SUB_MAIN_ACCT_NAME"}'>
                                                            <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <input class="form-control" type="text" id="SUB_MAIN_ACCT_NAME" name="SUB_MAIN_ACCT_NAME" title="Category Name" />
                                            </div>

                                            <div class="col-md-1">
                                                <input class="form-control" type="hidden" id="SUB_MAIN_SUB_ACCT_CODE" name="SUB_MAIN_SUB_ACCT_CODE" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label>
                                                    Status
                                                </label>
                                            </div>
                                            <div class="col-md-3">
                                                <input class="checkbox checkbox-inline pull-left" type="checkbox" id="SUB_MAIN_ACCT_STATUS" name="SUB_MAIN_ACCT_STATUS" checked required />
                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <hr />
                                <!--Grid Buttons-->
                                <div class="row">
                                    <div class="btn-block">
                                        <button id="btnAddAcctMain" class="btn btn-default" type="button"> <i class="fa ion-plus-circled text-success"></i> Add New</button>
                                        <button id="btnRemoveAcctMain" class="btn btn-default" type="button"><i class="fa ion-trash-b text-danger"></i> Remove</button>

                                        <button type="button" class="btn btn-default pull-right dialog-btn" id="mainAcnt-export-btn" title="Export Grid data to Excel">
                                            <img src="~/Content/Images/Excell_DownLoad.png" alt="Down Load" height="25" width="27"/> Export
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <table id="grdAcctMain"></table>
                                    <table id="grdAcctMainPager"></table>
                                </div>
                            </div>

                            <div id="tabs-2">
                                <form id="acctCurrencyForm">
                                    <div class="row">
                                        <hr />
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label>Currency</label>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="input-group">
                                                    <input class="form-control" type="text" id="SUB_CURR_CODE" name="SUB_CURR_CODE" title="Sub Account Currency " required />
                                                    <span class="input-group-btn">
                                                        <button type="button" class="btn btn-default pull-left btn_lov" data-dialog='{"type": "btnSubAcctCurrLov", "field1":"SUB_CURR_CODE", "field2":"SUB_CURR_NAME"}'>
                                                            <i class="fa fa-sort-down" title="Select" aria-hidden="true"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>

                                            <div class="col-md-6">
                                                <input class="form-control" type="text" id="SUB_CURR_NAME" name="SUB_CURR_NAME" title="Category Name" />

                                            </div>

                                            <div class="col-md-1">

                                                <input class="form-control" type="hidden" id="SUB_CURR_SUB_CODE" name="SUB_CURR_SUB_CODE" />

                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-2">
                                                <label>
                                                    Status
                                                </label>
                                            </div>
                                            <div class="col-md-3">
                                                <input class="checkbox checkbox-inline pull-left" type="checkbox" id="ACUR_STATUS" name="ACUR_STATUS" checked required />

                                            </div>
                                        </div>
                                    </div>
                                </form>
                                <hr />
                                <!--Grid Buttons-->
                                <div class="row">
                                    <div class="btn-block">
                                        <button id="btnAddAcctCurrency" class="btn btn-default" type="button"> <i class="fa ion-plus-circled text-success"></i> Add New</button>
                                        <button id="btnRemoveAcctCurrency" class="btn btn-default" type="button"><i class="fa ion-trash-b text-danger"></i> Remove</button>

                                        <button type="button" class="btn btn-default pull-right dialog-btn" id="rcptDetail-export-btn" title="Export Grid data to Excel">
                                            <img src="~/Content/Images/Excell_DownLoad.png" alt="Down Load" height="25" width="27"/> Export
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <table id="grdAcctCurrency"></table>
                                    <table id="grdAcctCurrencyPager"></table>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</div>




